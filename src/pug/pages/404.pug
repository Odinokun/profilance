extends ../_template

mixin item(title, image)
  //begin services-item
  a(href="/").services-item
    .services-item__image
      img(src="assets/img/service-" + image + ".jpg" alt=title)
    .h3.services-item__title-sm= title
  //end services-item

block variables
  - let title       = 'Profilance'
  - let description = ''
block content
  .main-wrap.no-js
    include ../sections/header

    //begin content
    main.main
      .error
        //begin services
        .services
          .container
            //begin services-item--double
            .services-item.services-item--double
              .services-item__content
                .overline.services-item__subtitle 404
                .h1.services-item__title This page<br> doesn't exist.
                .body-1.services-item__text Lorem ipsum dolor sit amet consectetur. Pellentesque dui in rutrum est ullamcorper hac adipiscing tempor. Sed tellus purus leo sed amet massa magna habitant eu.
